{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/**/*.php": {
      "runtime": "php-8.2"
    },
    "**.php": {
      "runtime": "php-8.2"
    }
  },
  "routes": [
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/(.*\\.php)$", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}
